				"name": "claude",
				"fullName": "Claude CLI",
				"description": "Anthropic Claude AI Assistant via CLI",
				"isSticky": true,
				"commands": [
					{
						"name": "session",
						"description": "View current session information"
					}
				]
			}
		],
		"languageModelTools": [
			{
				"name": "chp_zhipuWebSearch",
				"displayName": "ZhipuAI Web Search",
				"toolReferenceName": "zhipuWebSearch",
				"modelDescription": "Uses ZhipuAI's web search functionality to get real-time information. Supports multiple search engines: search_std (standard search, ¥0.01), search_pro (advanced search, ¥0.03), search_pro_sogou (Sogou search, ¥0.05), search_pro_quark (Quark search, ¥0.05). Note: Pro+ plans can use MCP SSE calls, non-subscription plans use standard billing interface (per-request billing).",
				"userDescription": "Get latest information through ZhipuAI web search",
				"inputSchema": {
					"type": "object",
					"properties": {
						"search_query": {
							"type": "string",
							"description": "Search query string"
						},
						"search_engine": {
							"type": "string",
							"enum": [
								"search_std",
								"search_pro",
								"search_pro_sogou",
								"search_pro_quark"
							],
							"description": "Search engine type: search_std (standard, ¥0.01), search_pro (advanced, ¥0.03), search_pro_sogou (Sogou, ¥0.05), search_pro_quark (Quark, ¥0.05)",
							"default": "search_std"
						},
						"search_intent": {
							"type": "boolean",
							"description": "Whether to perform search intent analysis",
							"default": false
						},
						"count": {
							"type": "integer",
							"description": "Number of search results to return",
							"minimum": 1,
							"maximum": 20,
							"default": 10
						},
						"search_domain_filter": {
							"type": "string",
							"description": "Domain filter, limits search to specific websites"
						},
						"search_recency_filter": {
							"type": "string",
							"enum": [
								"noLimit",
								"day",
								"week",
								"month",
								"year"
							],
							"description": "Time filter: noLimit (no limit), day (within one day), week (within one week), month (within one month), year (within one year)",
							"default": "noLimit"
						},
						"content_size": {
							"type": "string",
							"enum": [
								"low",
								"medium",
								"high"
							],
							"description": "Content detail level: low (low), medium (medium), high (high)",
							"default": "medium"
						}
					},
					"required": [
						"search_query"
					]
				},
				"canBeReferencedInPrompt": true
			},
			{
				"name": "chp_minimaxWebSearch",
				"displayName": "MiniMax Web Search",
				"toolReferenceName": "minimaxWebSearch",
				"modelDescription": "Uses MiniMax Coding Plan's web search functionality to get real-time information. Requires subscribing to MiniMax Coding Plan and setting dedicated API key.",
				"userDescription": "Get latest information through MiniMax web search",
				"inputSchema": {
					"type": "object",
					"properties": {
						"q": {
							"type": "string",
							"description": "Search query string"
						}
					},
					"required": [
						"q"
					]
				},
				"canBeReferencedInPrompt": true
			}
		],
		"keybindings": [
			{
				"command": "editor.action.inlineSuggest.trigger",
				"key": "alt+/",
				"when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly && !suggestWidgetVisible"
			},
			{
				"command": "chp.nesCompletion.toggleManual",
				"key": "shift+alt+/"
			},
			{
				"command": "chp.copilot.attachSelection",
				"key": "ctrl+shift+a",
				"mac": "cmd+shift+a",
				"when": "editorTextFocus && editorHasSelection"
			},
			{
				"command": "chp.copilot.insertHandle",
				"key": "ctrl+shift+h",
				"mac": "cmd+shift+h",
				"when": "editorTextFocus"
			},
			{
				"command": "chp.copilot.insertHandleFullPath",
				"key": "ctrl+alt+shift+h",
				"mac": "cmd+alt+shift+h",
				"when": "editorTextFocus"
			},
			{
				"command": "chp.accounts.quickSwitch",
				"key": "ctrl+shift+q",
				"mac": "cmd+shift+q"
			}
		],
		"menus": {
			"editor/context": [
				{
					"submenu": "chp.copilot.submenu",
					"group": "1_copilot",
					"when": "editorTextFocus"
				}
			],
			"chp.copilot.submenu": [
				{
					"command": "chp.copilot.insertHandle",
					"group": "1_handle@1",
					"when": "editorTextFocus"
				},
				{
					"command": "chp.copilot.insertHandleFullPath",
					"group": "1_handle@2",
					"when": "editorTextFocus"
				},
				{
					"command": "chp.copilot.attachSelection",
					"group": "2_attach@1",
					"when": "editorTextFocus && editorHasSelection"
				}
			]
		},
		"submenus": [
			{
				"id": "chp.copilot.submenu",
				"label": "Copilot ++",
				"icon": "$(copilot)"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run clean && npm run compile",
		"compile": "node esbuild.config.js",
		"compile:dev": "node esbuild.config.js --dev",
		"clean": "rimraf dist",
		"lint": "biome check",
		"lint:fix": "biome check --apply",
		"format": "biome format",
		"format:check": "biome format --check",
		"watch": "node esbuild.config.js --watch --dev",
		"package": "vsce package",
		"publish": "vsce publish --allow-proposed-apis chatProvider chatParticipantAdditions defaultChatParticipant",
		"pretest": "npm run compile:dev",
		"release": "vsce package && \"${VSCODE_BIN:-/Applications/Visual Studio Code.app/Contents/Resources/app/bin/code}\" --install-extension *.vsix --force",
		"test": "echo \"No tests specified\" && exit 0"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.67.0",
		"@microsoft/tiktokenizer": "^1.0.10",
		"@modelcontextprotocol/sdk": "^1.20.2",
		"@vscode/chat-lib": "^0.2.0",
		"openai": "^6.7.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@types/json-schema": "^7.0.15",
		"@types/node": "^20.0.0",
		"@types/vscode": "^1.104.0",
		"@vscode/vsce": "^3.6.2",
		"esbuild": "^0.25.10",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"ts-node": "^10.9.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.2"
	},
	"volta": {
		"node": "20.19.5"
	}
